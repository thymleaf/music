<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <View
        android:id="@+id/track_pic"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:lines="1"
        android:textAppearance="?textAppearanceListItemSecondary"
        app:layout_constraintEnd_toStartOf="@+id/play_count"
        app:layout_constraintStart_toEndOf="@+id/track_pic"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="爱的代价" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:lines="1"
        android:textAppearance="?textAppearanceCaption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        tools:text="李宗盛" />

    <ImageView
        android:id="@+id/play_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_status_top"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/colorAccent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/view_status_right"
        app:layout_constraintStart_toStartOf="@+id/track_pic"
        app:layout_constraintTop_toTopOf="@+id/view_status_right" />

    <View
        android:id="@+id/view_status_right"
        android:layout_width="1px"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_status_bottom"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/colorAccent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/view_status_right"
        app:layout_constraintStart_toStartOf="@id/track_pic" />
</androidx.constraintlayout.widget.ConstraintLayout>