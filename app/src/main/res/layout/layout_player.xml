<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@drawable/shape_player_outer">

    <View
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/bg_gray"
        android:rotation="135"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/bg_gray"
        android:rotation="225"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/shape_player_inner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_center_dot"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_player_inner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@drawable/outline_skip_previous"
        app:layout_constraintBottom_toBottomOf="@+id/view_center"
        app:layout_constraintEnd_toStartOf="@+id/view_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_center" />

    <ImageView
        android:id="@+id/img_queue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@drawable/outline_queue_music"
        app:layout_constraintBottom_toTopOf="@+id/view_center"
        app:layout_constraintEnd_toEndOf="@+id/view_center"
        app:layout_constraintStart_toEndOf="@+id/img_previous"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@drawable/outline_skip_next"
        app:layout_constraintBottom_toBottomOf="@+id/view_center"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/view_center"
        app:layout_constraintTop_toTopOf="@+id/view_center" />

    <ImageView
        android:id="@+id/img_loop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@drawable/outline_loop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view_center"
        app:layout_constraintStart_toStartOf="@+id/view_center"
        app:layout_constraintTop_toBottomOf="@+id/view_center" />
</androidx.constraintlayout.widget.ConstraintLayout>